# Deep Researcher 环境变量配置示例
# 复制此文件为 .env 并填入实际配置

# ================================
# API 配置
# ================================
# API服务器配置
API_HOST=0.0.0.0
API_PORT=8000

# ================================
# Streamlit 配置
# ================================
# Streamlit前端配置
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true

# ================================
# LLM 配置
# ================================
# OpenAI API配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# 本地LLM配置（如果使用本地模型）
# LOCAL_LLM_URL=http://localhost:11434
# LOCAL_LLM_MODEL=llama2

# ================================
# 搜索服务配置
# ================================
# 搜索API配置
SEARCH_API_KEY=your_search_api_key_here
SEARCH_ENGINE=google  # google, bing, duckduckgo

# ================================
# 缓存配置
# ================================
# Redis配置（如果使用Redis）
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# 本地缓存配置
CACHE_TYPE=file  # file, redis, memory
CACHE_DIR=research_result/cache
CACHE_TTL=3600

# ================================
# 应用配置
# ================================
# 调试模式
DEBUG=false

# 日志级别
LOG_LEVEL=INFO

# 工作目录
WORK_DIR=/app

# 结果存储目录
RESULT_DIR=research_result

# ================================
# 安全配置
# ================================
# JWT密钥（如果需要身份验证）
JWT_SECRET_KEY=your_jwt_secret_key_here

# 允许的域名（CORS）
ALLOWED_ORIGINS=http://localhost:8501,http://127.0.0.1:8501

# ================================
# 限制配置
# ================================
# 请求频率限制
RATE_LIMIT=100/minute

# 文件上传大小限制
MAX_FILE_SIZE=10MB

# 研究任务超时时间（秒）
RESEARCH_TIMEOUT=3600
